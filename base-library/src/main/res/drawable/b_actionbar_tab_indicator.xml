<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Non focused states -->
    <item android:drawable="@color/b_tab_normal_color" android:state_focused="false" android:state_pressed="false" android:state_selected="false"/>
    <item android:drawable="@color/b_tab_normal_color" android:state_focused="false" android:state_pressed="false" android:state_selected="true"/>

    <!-- Focused states -->
    <item android:drawable="@color/b_tab_pressed_color" android:state_focused="true" android:state_pressed="false" android:state_selected="false"/>
    <item android:drawable="@color/b_tab_pressed_color" android:state_focused="true" android:state_pressed="false" android:state_selected="true"/>

    <!-- Pressed -->
    <!-- Non focused states -->
    <item android:drawable="@color/b_tab_pressed_color" android:state_focused="false" android:state_pressed="true" android:state_selected="false"/>
    <item android:drawable="@color/b_tab_pressed_color" android:state_focused="false" android:state_pressed="true" android:state_selected="true"/>

    <!-- Focused states -->
    <item android:drawable="@color/b_tab_pressed_color" android:state_focused="true" android:state_pressed="true" android:state_selected="false"/>
    <item android:drawable="@color/b_tab_pressed_color" android:state_focused="true" android:state_pressed="true" android:state_selected="true"/>

</selector>
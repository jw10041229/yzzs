<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 总体样式 start -->
    <style name="Yzzs"></style>

    <style name="Yzzs.Theme" parent="@style/Basic.Theme"></style>

    <style name="Yzzs.Theme.CanBack" parent="@style/Yzzs.Theme">
        <item name="android:windowBackground">@android:color/white</item>
    </style> <!-- 没有背景的主题 -->
    

    <style name="Yzzs.Theme.NoTitleBar" parent="@style/Basic.Theme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 单独样式start -->
    <!-- 登录 -->
    <style name="ButtonLogin">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">43dip</item>
    </style>

    <!-- 自定义字体颜色 -->
    <style name="TextColorGray">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#061C33</item>
    </style>
        <style name="TextColorGraylogin">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#061C33</item>
    </style>
    <!-- 可编辑的行样式 -->
    <style name="EditRowLine">
        <item name="android:maxHeight">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
        <!-- 可编辑的行样式2 -->
    <style name="EditRowLine2">
        <item name="android:maxHeight">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
         <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- 没有边框的输入框样式 -->
    <style name="NoborderEditText">
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>
        <style name="NoborderEditTextlogin">
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textSize">20sp</item>
    </style>
        <!-- 没有边框的输入框样式 -->
    <style name="NoborderEditText2">
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 没有边框的输入框样式 -->
    <style name="NoborderSpinner">
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>
    
        <style name="maintabt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
    </style>

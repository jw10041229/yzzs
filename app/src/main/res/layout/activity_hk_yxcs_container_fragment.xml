<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RL_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RL_title"
        android:layout_above="@+id/ll_bottom_bar"
        android:gravity="center" >

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:background="@color/transparent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cgqbd"
            android:layout_width="0dp"
            android:background="@drawable/login_btn_bg"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dip"
            android:layout_marginEnd="5dip"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="传感器"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_hkbd"
            android:layout_width="0dp"
            android:background="@drawable/login_btn_bg"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dip"
            android:layout_marginEnd="10dip"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="环控设备"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RL_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_titlebar_blue"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/iv_set"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:background="@drawable/set_icon"
            android:gravity="center" />


        <ImageView
            android:id="@+id/iv_change_model"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:paddingRight="5dp"
            android:visibility="visible"
            android:src="@drawable/icon_retore" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="参数设置"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>
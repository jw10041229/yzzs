<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_titlebar_blue"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingEnd="9dp"
            android:text="称重调试"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_read_weight"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:paddingEnd="9dp"
            android:text="读取重量(Kg)"
            android:textColor="@color/white"
            android:background="@drawable/light_blue_bg"
            android:textSize="16sp" />
        <View
            android:id="@+id/view_separstor_1"
            android:layout_width="1dp"
            android:layout_height="@dimen/view_line_height"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:background="#f0f0f0" />
        <TextView
            android:id="@+id/tv_read_weight_value"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:paddingEnd="9dp"
            android:textColor="@color/darkblue"
            android:text=""
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <View
            android:id="@+id/view_separstor_2"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="#f0f0f0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_calibrate"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="9dp"
            android:text="校准"
            android:textColor="@color/white"
            android:background="@drawable/light_blue_bg"
            android:textSize="16sp" />
        <View
            android:id="@+id/view_separstor_3"
            android:layout_width="1dp"
            android:layout_height="@dimen/view_line_height"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:background="#f0f0f0" />
        <EditText
            android:id="@+id/tv_calibrate_value"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/darkblue"
            android:maxLength="3"
            android:hint="请输入校准值"
            android:textColorHint="@color/darkblue"
            android:textSize="16sp" />
    </LinearLayout>
<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <View
            android:id="@+id/view_separstor_4"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="#f0f0f0" />
    </LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_set_calibrate"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="9dp"
            android:text="设置校准参数"
            android:textSize="16sp" />
        <View
            android:id="@+id/view_separstor_5"
            android:layout_width="1dp"
            android:layout_height="@dimen/view_line_height"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:background="#f0f0f0" />
        <EditText
            android:id="@+id/tv_set_calibrate_value"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/darkblue"
             android:textColorHint="@color/darkblue"
            android:maxLength="4"
            android:hint="请输入校准参数"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <View
            android:id="@+id/view_separstor_6"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="#f0f0f0" />
    </LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_set_empty_scale"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="9dp"
            android:text="设置空称"
            android:textColor="@color/white"
            android:background="@drawable/light_blue_bg"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_czgc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/czgc" />
        </LinearLayout>
</LinearLayout>
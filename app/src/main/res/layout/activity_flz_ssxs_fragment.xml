<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_titlebar_blue"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_set"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:paddingEnd="9dp"
            android:text="设置"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingEnd="9dp"
            android:text="实时显示"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_pause"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:paddingStart="9dp"
            android:text="暂停"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/flz_temp_ll_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/tv_work_model_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_work_model"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/darkblue"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/tv_work_model_ll"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:paddingRight="9dp"
                android:text="体重(KG)"
                android:textSize="16sp"
                android:visibility="gone" />

            <View
                android:id="@+id/view_separstor_1"
                android:layout_width="1dp"
                android:layout_height="70dp"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:background="#f0f0f0"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_weight_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:text=""
                android:textColor="@color/white"
                android:textSize="46sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_weight_point"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:paddingTop="8dp"
                android:text="."
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_weight_value2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center_vertical"
                android:paddingTop="16dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_weight_unit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="start|center_vertical"
                android:paddingTop="12dp"
                android:text="Kg"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <View
            android:id="@+id/view_separstor_2"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="#f0f0f0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_RFID"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:paddingRight="9dp"
            android:text="耳标(RFID)"
            android:textSize="14sp" />

        <View
            android:id="@+id/view_separstor_3"
            android:layout_width="1dp"
            android:layout_height="@dimen/view_line_height"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:background="#f0f0f0" />

        <TextView
            android:id="@+id/tv_rfid_value"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:paddingRight="9dp"
            android:text=""
            android:textColor="@color/darkblue"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <View
            android:id="@+id/view_separstor_4"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="#f0f0f0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_temperature"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:paddingRight="9dp"
            android:text="体温(℃)"
            android:textSize="16sp" />

        <View
            android:id="@+id/view_separstor_5"
            android:layout_width="1dp"
            android:layout_height="@dimen/view_line_height"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:background="#f0f0f0" />

        <TextView
            android:id="@+id/tv_temperature_value"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:paddingRight="9dp"
            android:text=""
            android:textColor="@color/darkblue"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <View
            android:id="@+id/view_separstor_6"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="#f0f0f0" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_yxzt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_dev_state"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:paddingRight="9dp"
            android:text="运行状态"
            android:textSize="16sp" />

        <View
            android:id="@+id/view_separstor_7"
            android:layout_width="1dp"
            android:layout_height="@dimen/view_line_height"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:background="#f0f0f0" />

        <TextView
            android:id="@+id/tv_dev_state_value"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:paddingRight="9dp"
            android:text=""
            android:textColor="@color/darkblue"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <View
            android:id="@+id/view_separstor_8"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="#f0f0f0" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_fl_cl_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_fl_weight"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/tv_fl_weight_state"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:paddingRight="9dp"
                android:text="分栏重量(Kg)"
                android:textSize="16sp" />

            <View
                android:id="@+id/view_separstor_9"
                android:layout_width="1dp"
                android:layout_height="@dimen/view_line_height"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:background="#f0f0f0" />

            <TextView
                android:id="@+id/tv_fl_weight_state_value"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.7"
                android:gravity="center"
                android:paddingRight="9dp"
                android:text=""
                android:textColor="@color/darkblue"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_view_separstor_10"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible" >

            <View
                android:id="@+id/view_separstor_10"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="#f0f0f0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_target_cl_count"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/tv_target_cl_count"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:paddingRight="9dp"
                android:text="目标出栏个数"
                android:textSize="16sp" />

            <View
                android:id="@+id/view_separstor_11"
                android:layout_width="1dp"
                android:layout_height="@dimen/view_line_height"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:background="#f0f0f0" />

            <TextView
                android:id="@+id/tv_target_cl_count_value"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.7"
                android:gravity="center"
                android:paddingRight="9dp"
                android:text=""
                android:textColor="@color/darkblue"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_view_separstor_12"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible" >

            <View
                android:id="@+id/view_separstor_12"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="#f0f0f0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_cl_count_now"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/cl_count_now"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:paddingRight="9dp"
                android:text="当前出栏个数"
                android:textSize="16sp" />

            <View
                android:id="@+id/view_separstor_13"
                android:layout_width="1dp"
                android:layout_height="@dimen/view_line_height"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:background="#f0f0f0" />

            <TextView
                android:id="@+id/tv_cl_count_now_value"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.7"
                android:gravity="center"
                android:paddingRight="9dp"
                android:text=""
                android:textColor="@color/darkblue"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_view_separstor_14"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible" >

            <View
                android:id="@+id/view_separstor_14"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="#f0f0f0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_cl_is_over"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/tv_is_over"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:paddingRight="9dp"
                android:text="是否结束"
                android:textSize="16sp" />

            <View
                android:id="@+id/view_separstor_15"
                android:layout_width="1dp"
                android:layout_height="@dimen/view_line_height"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:background="#f0f0f0" />

            <TextView
                android:id="@+id/tv_is_over_value"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.7"
                android:gravity="center"
                android:paddingRight="9dp"
                android:text=""
                android:textColor="@color/darkblue"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_view_separstor_15"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible" >

            <View
                android:id="@+id/view_separstor_16"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="#f0f0f0" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_sbzt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <ScrollView
            android:id="@+id/sv_fault"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="6dip" >

                <TextView
                    android:id="@+id/tv_fault"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="正在获取设备运行状况..."
                    android:textColor="@color/darkblue"
                    android:textSize="16sp" />
            </RelativeLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/iv_refresh_fault"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_refresh_blue" />
    </RelativeLayout>

</LinearLayout>
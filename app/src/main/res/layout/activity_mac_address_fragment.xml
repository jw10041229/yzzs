<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_titlebar_blue"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="35dp"
            android:visibility="gone"
            android:layout_height="35dp"
            android:paddingStart="10dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:paddingEnd="9dp"
            android:text="mac地址"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@color/gray_light"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_positive_runtime_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:text="mac:"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/et_mac_1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text=""
            android:maxLength="2"
            android:digits="@string/filter_vcode2"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text=":"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_mac_2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@null"
            android:text=""
            android:maxLength="2"
            android:digits="@string/filter_vcode2"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text=":"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_mac_3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:inputType="number"
            android:background="@null"
            android:gravity="center"
            android:text=""
            android:digits="@string/filter_vcode2"
            android:maxLength="2"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text=":"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_mac_4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@null"
            android:text=""
            android:digits="@string/filter_vcode2"
            android:maxLength="2"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text=":"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/et_mac_5"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@null"
            android:text=""
            android:digits="@string/filter_vcode2"
            android:maxLength="2"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text=":"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/et_mac_6"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@null"
            android:text=""
            android:digits="@string/filter_vcode2"
            android:maxLength="2"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_read_mac_address"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/light_blue_bg"
            android:text="读取"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_change_mac_address"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/light_blue_bg"
            android:text="修改"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center"
    android:orientation="horizontal" >

    </LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@color/gray_light"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_ym_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingStart="10dp"
            android:text="掩码:"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/YmEt1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:background="@null"
            android:gravity="center"
            android:inputType="number"
            android:text="255.255.255.0"
            android:textSize="16sp" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center"
    android:visibility="gone"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/readYmBtn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/light_blue_bg"
        android:text="读取"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/changeYmBtn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/light_blue_bg"
        android:text="修改"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>
</LinearLayout>